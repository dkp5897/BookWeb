@model ProductVM

<form method="post" class="container my-4">
    <div class="border p-4 bg-white rounded shadow-sm">
        <div class="row p-3 bg-primary text-center">
            <h1 class="text-white">Delete Product</h1>
        </div>
        <hr />

        <!-- Validation summary for errors -->
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <!-- Form fields -->
        <div class="row g-3">
            <div class="col-md-6">
                <input asp-for="Product.ProductId" hidden />
                <label asp-for="Product.Title" class="form-label fw-semibold"></label>
                <input disabled asp-for="Product.Title" class="form-control" />
                <span asp-validation-for="Product.Title" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Product.Author" class="form-label fw-semibold"></label>
                <input disabled asp-for="Product.Author" class="form-control" />
                <span asp-validation-for="Product.Author" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Product.ISBN" class="form-label fw-semibold"></label>
                <input disabled asp-for="Product.ISBN" class="form-control" />
                <span asp-validation-for="Product.ISBN" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Product.Description" class="form-label fw-semibold"></label>
                <input disabled asp-for="Product.Description" class="form-control" />
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Product.Price" class="form-label fw-semibold"></label>
                <input disabled asp-for="Product.Price" class="form-control" />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Product.Price50" class="form-label fw-semibold"></label>
                <input disabled asp-for="Product.Price50" class="form-control" />
                <span asp-validation-for="Product.Price50" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Product.Price100" class="form-label fw-semibold"></label>
                <input disabled asp-for="Product.Price100" class="form-control" />
                <span asp-validation-for="Product.Price100" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Product.ListPrice" class="form-label fw-semibold"></label>
                <input disabled asp-for="Product.ListPrice" class="form-control" />
                <span asp-validation-for="Product.ListPrice" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Product.CategoryId" class="form-label fw-semibold"></label>
                <select disabled asp-for="Product.CategoryId" asp-items="@Model.CategoryList" class="form-select fw-semibold">
                    <option disabled selected hidden>--Select Product Category--</option>
                </select>
                <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
            </div>
        </div>

        <!-- Buttons -->
        <div class="row mt-4">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Product" asp-action="Index" class="btn btn-secondary form-control">
                    Back to List
                </a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
