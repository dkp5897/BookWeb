@model List<Product>

<div class="container my-4 p-4 bg-white rounded shadow-sm">
    <div class="row pt-3 pb-3 align-items-center border-bottom mb-4">
        <div class="col-md-6">
            <h1 class="h3 text-dark fw-bold">Product List</h1>
        </div>
        <div class="col-md-6 text-end">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary btn-sm">
                <i class="bi bi-patch-plus"></i> Create New Product
            </a>
        </div>
    </div>

    <table class="table table-bordered table-hover table-striped table-responsive-sm rounded-3">
        <thead class="table-dark">
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>ISBN</th>
                <th>Category</th>
                <th>Description</th>
                <th>Price</th>
                <th>Price of 50</th>
                <th>List Price</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.OrderBy(u => u.Title))
            {
                <tr>
                    <td>@obj.Title</td>
                    <td>@obj.Author</td>
                    <td>@obj.ISBN</td>
                    <td>@obj.Category.Name</td>
                    <td title="@obj.Description" class="text-truncate" style="max-width: 150px;">@obj.Description</td>
                    <td class="text-end">@obj.Price.ToString("C")</td>
                    <td class="text-end">@obj.Price50.ToString("C")</td>
                    <td class="text-end">@obj.ListPrice.ToString("C")</td>
                    <td class="text-center">
                        <div class="btn-group" role="group">
                            <a asp-controller="Product" asp-action="Upsert" asp-route-id="@obj.ProductId" class="btn btn-sm btn-primary">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.ProductId" class="btn btn-sm btn-danger">
                                <i class="bi bi-trash3-fill"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
